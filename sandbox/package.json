{
  "name": "sandbox",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start:metro": "react-native start",
    "test": "jest",
    "e2e": "detox test --configuration ios.sim.debug",
    "build:detox": "detox build --configuration ios.sim.debug",
    "run:ios": "react-native run-ios",
    "run:android": "react-native run-android"
  },
  "dependencies": {
    "react": "16.3.1",
    "react-native": "0.55.2"
  },
  "devDependencies": {
    "babel-jest": "22.4.3",
    "babel-preset-react-native": "4.0.0",
    "detox": "^7.3.3",
    "detox-cli": "^7.2.0",
    "jest": "22.4.3",
    "mocha": "^5.0.5",
    "react-native-cli": "^2.0.1"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "test-runner": "mocha",
    "specs": "e2e",
    "runner-config": "e2e/mocha.opts",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/sandbox.app",
        "build": "xcodebuild -project ios/sandbox.xcodeproj -scheme sandbox -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7 Plus"
      },
      "android.emu.debug": {
            "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
            "build":
            "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
            "type": "android.emulator",
            "name": "Nexus 5X API 23"
        },
        "android.emu.release": {
            "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
            "build":
            "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
            "type": "android.emulator",
            "name": "Nexus 5X API 23"
        }
    }
  }
}
